# OCI Stack Configuration
# Copy this to .env.local and fill in your values

# Stack OCID (from OCI Console > Resource Manager > Stacks)
# Leave empty to create a new stack on first run
OCI_STACK_ID=

# Compartment (your tenancy OCID or a specific compartment OCID)
# Find it: Profile → Tenancy → OCID
OCI_COMPARTMENT_ID=ocid1.tenancy.oc1..your-tenancy-id-here

# Region
OCI_REGION=us-ashburn-1

# Availability Domains
# Find it: Compute → Instances → Availability domain (left menu)
OCI_AD_MAIN=XXXX:US-ASHBURN-AD-1
OCI_AD_WORKERS=XXXX:US-ASHBURN-AD-1

# Ubuntu 22.04 Image OCID for your region
# Find yours: https://docs.oracle.com/en-us/iaas/images/
OCI_SOURCE_IMAGE_ID=ocid1.image.oc1.iad.your-image-id-here

# SSH Key (public key content for instance access)
OCI_SSH_KEY="ssh-ed25519 AAAA... your-public-key-here"

# SSH Private Key Path (for connecting to instances)
OCI_SSH_PRIVATE_KEY=~/.ssh/id_ed25519

# Instance Configuration (Free tier limits)
OCI_INSTANCE_SHAPE=VM.Standard.A1.Flex
OCI_MEMORY_GB=6
OCI_OCPUS=1
OCI_NUM_WORKERS=3

# Dokploy Admin Configuration
# Email for the admin user (required)
DOKPLOY_ADMIN_EMAIL=admin@example.com

# First and last name for the admin user (optional)
DOKPLOY_ADMIN_FIRST_NAME=Admin
DOKPLOY_ADMIN_LAST_NAME=User
